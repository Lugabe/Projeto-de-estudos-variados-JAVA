package Classe;

import java.util.Scanner;

public class DataTeste {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		Data d1 = new Data();
		d1.nome = "segunda";
		d1.mes = 06;
		d1.ano = 2022;

		System.out.print("Hoje é "+d1.nome);
		System.out.print(" do mês "+d1.mes);
		System.out.println(" do ano de "+d1.ano+".");
//    		
		Data d2 = new Data();
		d2.nome = "terça";
		d2.mes = 07;
		d2.ano = 2023;

		System.out.print("Amanhã será "+d2.nome);
		System.out.print(" do mês "+d2.mes);
		System.out.println(" do ano de "+d2.ano+".");

		entrada.close();

	}
}
