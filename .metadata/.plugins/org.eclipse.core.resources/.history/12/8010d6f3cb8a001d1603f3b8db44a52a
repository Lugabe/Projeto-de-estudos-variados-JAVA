package bytebankHerdadoContaModelo;

public abstract class Conta {

	/**
	 * Classe representa a moldura de uma conta bancaria
	 * 
	 * @author Luis_Gabriel_Bernardi
	 * 
	 */

	protected double saldo;
	private int agencia;
	private int numero;
	private Cliente titular;
	private static int total = 0;

	/**
	 * Construtor para inicializar o objeto Conta a partir da agencia e numero
	 * 
	 * @param agencia
	 * @param numero
	 */

	public Conta(int agencia, int numero) {
		Conta.total++;
		// System.out.println("O total de contas é " + Conta.total);
		this.agencia = agencia;
		this.numero = numero;
		this.saldo = 0;
		// System.out.println("Estou criando uma conta " + this.numero);
	}

	public abstract void deposita(double valor);

	/**
	 * Valor precisa ser maior do que o saldo
	 * 
	 * @param valor
	 * @throws SaldoInsufiienteException
	 */

	public void saca(double valor) throws SaldoInsufiienteException {
		if (this.saldo < valor) {
			throw new SaldoInsufiienteException("Saldo" + this.saldo + ", valor: " + valor);
		}

		this.saldo -= valor;
	}

	/**
	 * Transfere valores entre a conta corrente e conta poupança
	 * 
	 * @param valor
	 * @param destino
	 * @throws SaldoInsufiienteException
	 */

	public void transfere(double valor, Conta destino) throws SaldoInsufiienteException {
		this.saca(valor);
		destino.deposita(valor);
	}

	public double getSaldo() {
		System.out.println("Saldo atual: ");
		return this.saldo;

	}

	public int getNumero() {
		return this.numero;
	}

	public void setNumero(int numero) {
		if (numero <= 0) {
			System.out.println("Nao pode valor menor igual a 0");
			return;
		}
		this.numero = numero;
	}

	public int getAgencia() {
		return this.agencia;
	}

	public void setAgencia(int agencia) {
		if (agencia <= 0) {
			System.out.println("Nao pode valor menor igual a 0");
			return;
		}
		this.agencia = agencia;
	}

	public void setTitular(Cliente titular) {
		this.titular = titular;
	}

	public Cliente getTitular() {
		return this.titular;
	}

	public static int getTotal() {
		return Conta.total;
	}

	@Override
	public String toString() {
		return "Numero: " + this.numero + ", Agencia: " + this.agencia;
	}

	public boolean ehIgual(Conta outra) {
		if(this.agencia != outra.agencia) {
			return false;
		}
			if(this.numero != outra.numero) {
				return false;
			}
	}

}
